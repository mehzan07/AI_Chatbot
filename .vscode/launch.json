{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Flask App (Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "chatbot:app",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Flask App (No Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "chatbot:app",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "noDebug": true,
            "jinja": true,
            "console": "integratedTerminal"
        }
    ]
}
